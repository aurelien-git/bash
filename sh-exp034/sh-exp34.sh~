#!/bin/bash
# A script shell that compare numbers

tput clear

the_user=`whoami`

x=4.5
y=10
z=10

[ $x = $y ]   # equal to?
echo  $?        # check exit status
# 2 is for something illegal like using -eq 
# 1 for wrong
# 0 for right

[ $y = $z ]
echo $?


printf "\nWell done $the_user!\n\n"


# End of program
exit 0

# exit $? to exit the program on last command
# exit 0 to exit the program
